<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/row_view_pager_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:padding="@dimen/pading_10" />

        <ProgressBar
            android:id="@+id/row_view_pager_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/row_view_pager_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/pading_20"
        android:layout_marginTop="@dimen/pading_20"
        android:background="@drawable/bg_red_button"
        android:paddingLeft="@dimen/pading_25"
        android:paddingRight="@dimen/pading_25"
        android:singleLine="true"
        android:text="Save"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</LinearLayout>